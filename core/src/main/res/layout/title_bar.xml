<?xml version="1.0" encoding="utf-8"?>
<com.adapter.smart.core.ui.BaseTitlebar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_title_bar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/bg_line_bottom_1dp"
    android:gravity="center_vertical">
    <RelativeLayout
        android:id="@+id/title_center_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/base_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="标题栏"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray_333"
            android:textSize="16sp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/title_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/title_center_line"
        android:contentDescription="@string/app_name"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/return_back"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/gray_333"
        android:textSize="16sp"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/right_like_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/right_button"
        android:background="@null"
        android:contentDescription="@string/app_name"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@+id/right_like_button"
        android:layout_alignTop="@+id/right_like_button"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/gray_333"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@color/gray_333"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:textSize="16sp"
        android:text="右侧"
        android:visibility="visible"/>

</com.adapter.smart.core.ui.BaseTitlebar>
